 {
 "variables":{
	"aws_access_key": "{{env `aws_access_key`}}",
    "aws_secret_key": "{{env `aws_secret_key`}}"
	},
 "builders": [
	{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-west-1",
    "source_ami": "ami-d834aba1",
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "ami_name": "packer-linux {{isotime \"02-Jan-06 03-04 am\"}}",
	"tags": {
		"Name":"Packer Linux AMI",
		"Business Unit":"Enterprise"
		
	},
	"ami_description": "Amazon Linux CIS with Cloudwatch Logs agent",
    "associate_public_ip_address": "true"
    
	}
  ],
  "provisioners": [  
  {
	"type": "shell",
	"inline": [
		"sudo yum install -y python-dev python-pip",
		"sudo pip install ansible==2.1",
		"sudo wget https://d1wk0tztpsntt1.cloudfront.net/linux/latest/install",
		"sudo bash install",
		"rm install",
		"sudo pip install awscli --upgrade --user",
		"sudo yum install perl-Switch perl-DateTime perl-Sys-Syslog perl-LWP-Protocol-https -y",
		"mkdir aws-cloudwatch",
		"cd aws-cloudwatch",
		"sudo curl http://aws-cloudwatch.s3.amazonaws.com/downloads/CloudWatchMonitoringScripts-1.2.1.zip -O",
		"unzip CloudWatchMonitoringScripts-1.2.1.zip",
		"rm CloudWatchMonitoringScripts-1.2.1.zip",
		"cd aws-scripts-mon/",
		"touch awscreds.conf",
		"echo -e 'AWSAccessKeyId={{user `aws_access_key`}}\nAWSSecretKey={{user `aws_secret_key`}}' > awscreds.conf"
		]
  }
]
}
